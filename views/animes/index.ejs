<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>animes</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body class="container" style="margin-top: 50px;">

    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert">
            <%- messages.success %>
        </div>
    <% } %>

    <% if (messages.error) { %>
        <div class="alert alert-success" role="alert">
            <%- messages.error %>
        </div>
    <% } %>

        <div class="card"> 
            <div class="card-header">
                <ul class="nav nav-pills w-100">
                    <li class="nav-pill active">
                        <a class="nav-link">animes</a>
                    </li>
                    <li class="nav-pill ml-auto">
                        <a class="nav-link active" href="/animes/add">Add animes </a>
                    </li>
                </ul>
            </div>
        <div class="card-body">

            <% if (data.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">animes Title</th>
                            <th scope="col">animes description</th>
                            <th width="200px">Action</th>
                        </tr>
                    </thead>
                    <tbody> 
                        <% for( let i = 0; i < data.length; i++ ) { %>
                            <tr>
                                <th scope="row">
                                    <%= (i+1) %> 
                                </th>
                                <td>
                                    <%= data[i].animesTitle %> 
                                </td>
                                <td>
                                    <%= data[i].animesDescription %> 
                                </td>
                                <td>
                                    <a class="btn btn-success edit" href="../animes/edit/<%= data[i].id %> ">Edit</a>                       
                                    <a class="btn btn-danger delete" onclick="return alert('Are You Sure ?')" href="../animes/delete/<%= data[i].id %> ">Delete</a>                       
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } %>
                    
            <!-- Check Result Data -->
            <% if (!data.length) { %>
                <p class="text-center">No animesfound!</p>
            <% } %>
            </div>
        </div>
    </body>
</html>